{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"build": {
			"dependsOn": [],
			"outputs": ["dist/**"],
			"inputs": ["src/**", "package.json"]
		},
		"lint": {
			"outputs": [],
			"inputs": ["src/**", "biome.json"]
		},
		"check": {
			"dependsOn": [],
			"outputs": [],
			"inputs": ["src/**", "tsconfig.json"]
		},
		"test": {
			"dependsOn": [],
			"outputs": [],
			"inputs": ["src/**", "test/**"],
			"env": ["PK_TEST_DIR"]
		},
		"test-ci": {
			"dependsOn": [],
			"outputs": ["coverage/**"],
			"inputs": ["src/**", "test/**"],
			"env": ["PK_TEST_DIR"]
		},
		"//#format-and-lint": {},
		"//#format-and-lint:fix": {
			"cache": false
		}
	}
}
